# Postgres connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME?schema=public"
ADMIN_TOKEN="changeme-admin-token"
STAFF_TOKEN="changeme-staff-token"
NEXT_PUBLIC_MAPTILER_API_KEY="your-maptiler-key"

# Auth0 (required for reporting auth)
# Generate a strong random string for AUTH0_SECRET, e.g. via `openssl rand -base64 32`
AUTH0_SECRET="replace-with-random-secret"
# For local dev, this is usually your local URL
AUTH0_BASE_URL="http://localhost:3000"
# Your Auth0 tenant domain, e.g. https://your-tenant.us.auth0.com
AUTH0_ISSUER_BASE_URL="https://YOUR_TENANT.us.auth0.com"
AUTH0_CLIENT_ID="YOUR_CLIENT_ID"
AUTH0_CLIENT_SECRET="YOUR_CLIENT_SECRET"
